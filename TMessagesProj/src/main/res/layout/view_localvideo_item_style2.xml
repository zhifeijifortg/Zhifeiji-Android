<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_white_stroke_bg"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="128dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:riv_border_width="0dp"
            app:riv_corner_radius="5dip" />
        <View
            android:id="@+id/holdView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_black_corner_bg3"></View>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/iv_check"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/ic_check_no"
                android:visibility="gone"></ImageView>

            <ImageView
                android:id="@+id/iv_itemplay"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_item_play"
                android:visibility="visible"></ImageView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/ic_shadow_bg2"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="6dp"
            android:paddingRight="6dp">

            <TextView
                android:id="@+id/tv_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textColor="#ffffff"
                android:textSize="13sp"
                tools:text="0M"></TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_weight="1"></View>

            <TextView
                android:id="@+id/tv_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_black_corner_bg"
                android:includeFontPadding="false"
                android:paddingLeft="3dp"
                android:paddingTop="1dp"
                android:paddingRight="3dp"
                android:paddingBottom="1dp"
                android:textColor="#ffffff"
                android:textSize="13sp"
                tools:text="00:20"></TextView>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_from"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:textColor="#61000000"
        android:textSize="13sp"
        tools:text="来自："></TextView>
</LinearLayout>